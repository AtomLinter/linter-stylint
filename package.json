{
  "name": "linter-stylint",
  "main": "./lib/init.js",
  "version": "2.2.3",
  "description": "Linter plugin for Stylus, using `stylint`.",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-stylint.git"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.8.0 <2.0.0"
  },
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/AtomLinter/linter-stylint/issues"
  },
  "homepage": "https://github.com/AtomLinter/linter-stylint",
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    "linter"
  ],
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "dependencies": {
    "atom-linter": "^8.0.0",
    "atom-package-deps": "^4.0.1",
    "stylint": "1.5.6",
    "stylint-json-reporter": "^0.3.1"
  },
  "devDependencies": {
    "eslint": "^3.6.1",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0",
    "stylint-stylish": "^1.3.3"
  },
  "eslintConfig": {
    "rules": {
      "global-require": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "extends": "airbnb-base",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    }
  }
}
