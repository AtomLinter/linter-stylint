{
  "name": "linter-stylint",
  "main": "./lib/init.js",
  "version": "2.2.2",
  "description": "Linter plugin for Stylus, using `stylint`.",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-stylint.git"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.8.0 <2.0.0"
  },
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/AtomLinter/linter-stylint/issues"
  },
  "homepage": "https://github.com/AtomLinter/linter-stylint",
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    "linter"
  ],
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "dependencies": {
    "atom-linter": "^8.0.0",
    "atom-package-deps": "^4.0.1",
    "stylint": "1.5.6"
  },
  "devDependencies": {
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.1.0",
    "eslint-plugin-import": "^1.15.0"
  },
  "eslintConfig": {
    "rules": {
      "global-require": 0,
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "extends": "airbnb-base",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    }
  }
}
